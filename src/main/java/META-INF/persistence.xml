<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="examenfinal">
		<class>com.edu.ufps.examenfinal.dto.Connectiontoken</class>
		<class>com.edu.ufps.examenfinal.dto.Reporte</class>
		<class>com.edu.ufps.examenfinal.dto.Rol</class>
		<class>com.edu.ufps.examenfinal.dto.Seguimiento</class>
		<class>com.edu.ufps.examenfinal.dto.Typedb</class>
		<class>com.edu.ufps.examenfinal.dto.Usuario</class>
		
		<properties>
				<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/reportes"/>
				<property name="javax.persistence.jdbc.user" value="root"/>
				<property name="javax.persistence.jdbc.password" value=""/>
				<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
				<property name="javax.persistence.schema-generation.database.action" value="none"/>
				<property name="hibernate.dialect" value=" org.hibernate.dialect.MariaDB53Dialect"/>
				<property name="hibernate.show_sql" value="true"/>
				<property name="hibernate.format_sql" value="true"/>
				<property name="cascade" value="all"/>
			</properties>
	</persistence-unit>
</persistence>
